{
  "name": "cauldron",
  "private": true,
  "version": "6.22.0",
  "license": "MPL-2.0",
  "scripts": {
    "clean": "rimraf dist docs/dist",
    "build": "concurrently \"yarn build:styles\" \"yarn build:react\" \"yarn build:docs\"",
    "build:react": "cross-env NODE_ENV=production yarn --cwd=packages/react build",
    "build:styles": "cross-env NODE_ENV=production yarn --cwd=packages/styles build",
    "build:docs": "cross-env NODE_ENV=production webpack --bail",
    "dev": "concurrently \"yarn dev:styles\" \"yarn dev:react\" \"yarn dev:docs\"",
    "dev:react": "yarn --cwd=packages/react dev",
    "dev:styles": "yarn --cwd=packages/styles dev",
    "dev:docs": "webpack-dev-server",
    "fmt": "prettier --write \"e2e/*.ts\" \"docs/**/*.{css,js}\" \"packages/react/**/*.{js,ts,tsx}\" \"packages/styles/*.css\" *.{js,json,md,ts}",
    "lint": "eslint . --quiet",
    "typecheck": "yarn --cwd=packages/react tsc --noEmit --skipLibCheck",
    "prebuild": "yarn clean",
    "predev": "yarn clean",
    "test": "yarn --cwd=packages/react test",
    "test:a11y": "ts-node e2e/accessibility.ts",
    "postinstall": "if [ -z \"$CI\" ]; then yarn --cwd=packages/styles && yarn --cwd=packages/react; fi",
    "screenshots": "docker run --rm --ipc=host -v $(pwd)/playwright-ct.config.ts:/app/playwright-ct.config.ts -v $(pwd)/packages:/app/packages -v $(pwd)/e2e:/app/e2e cauldron-playwright-e2e-screenshots",
    "screenshots:docker": "docker build . -t cauldron-playwright-e2e-screenshots -f e2e/Dockerfile --build-arg playwright_version=$(npm list --depth=0 playwright | grep playwright | cut -f2 -d '@')",
    "release": "./scripts/release.sh",
    "precommit": "lint-staged",
    "prepare": "husky"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@axe-core/puppeteer": "^4.10.2",
    "@babel/core": "^7.28.3",
    "@babel/plugin-proposal-export-default-from": "^7.27.1",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@fontsource/lato": "^5.2.6",
    "@fontsource/pt-mono": "^5.2.6",
    "@fontsource/roboto": "^5.2.6",
    "@mdx-js/loader": "^3.1.1",
    "@playwright/experimental-ct-react17": "^1.50.1",
    "@playwright/test": "^1.50.1",
    "@types/classnames": "^2.3.4",
    "@types/express": "^5.0.1",
    "@types/node": "^22.18.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/react-router-dom": "^5.3.2",
    "@types/webpack-env": "^1.18.8",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "autoprefixer": "^9.7.6",
    "axe-core": "^4.10.0",
    "babel-loader": "^10.0.0",
    "babel-plugin-module-resolver": "^5.0.2",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "chalk": "^4.1.2",
    "classnames": "^2.5.1",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-ssr-friendly": "^1.3.0",
    "express": "^5.1.0",
    "focusable": "^2.3.0",
    "html-webpack-plugin": "^5.6.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "log-symbols": "4",
    "mdast-util-from-markdown": "^2.0.2",
    "mdast-util-mdx": "^3.0.0",
    "micromark-extension-mdxjs": "^3.0.0",
    "mini-css-extract-plugin": "^2.9.4",
    "node-fetch": "^3.3.0",
    "p-queue": "^8",
    "playwright": "^1.47.0",
    "postcss-cli": "^7.1.2",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "prettier": "^3",
    "puppeteer": "^24.17.0",
    "react": "^18",
    "react-dom": "^18",
    "react-helmet": "^6.1.0",
    "react-router-dom": "^7.8.2",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.1",
    "remark-mdx-frontmatter": "^5.2.0",
    "remark-mdx-toc": "^0.3.1",
    "rimraf": "^6.0.1",
    "slugify": "^1.6.5",
    "standard-version": "^9.1.1",
    "style-loader": "^4.0.0",
    "terser-webpack-plugin": "^5.3.10",
    "ts-node": "^10.9.2",
    "typescript": "~5.9.2",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  }
}
