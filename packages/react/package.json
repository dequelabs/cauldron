{
  "name": "@deque/cauldron-react",
  "version": "4.0.0",
  "description": "Fully accessible react components library for Deque Cauldron",
  "publishConfig": {
    "access": "public"
  },
  "main": "lib/index.js",
  "style": "lib/cauldron.css",
  "types": "lib/index.d.ts",
  "files": [
    "lib/"
  ],
  "scripts": {
    "build": "yarn build:lib && yarn build:css",
    "prebuild:lib": "node scripts/buildIconTypes.js",
    "build:lib": "rollup -c && tsc --declaration --emitDeclarationOnly --outDir lib",
    "build:css": "postcss --output=lib/cauldron.css src/index.css",
    "dev": "concurrently 'yarn build:css --watch' 'rollup -c --watch'",
    "prepublishOnly": "NODE_ENV=production yarn build",
    "test": "jest --maxWorkers=1 --coverage"
  },
  "dependencies": {
    "@popperjs/core": "^2.5.4",
    "classnames": "^2.2.6",
    "focus-trap-react": "^3.0.5",
    "focusable": "^2.3.0",
    "keyname": "^0.1.0",
    "prop-types": "^15.6.0",
    "react-id-generator": "^3.0.1",
    "react-popper": "^2.2.4",
    "react-syntax-highlighter": "^15.4.3",
    "tslib": "^2.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-export-default-from": "^7.8.3",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-react": "^7.9.4",
    "@babel/preset-stage-0": "^7.8.3",
    "@babel/preset-typescript": "^7.9.0",
    "@babel/register": "^7.9.0",
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-dynamic-import-vars": "^1.4.2",
    "@rollup/plugin-typescript": "^5.0.2",
    "@svgr/rollup": "^6.1.2",
    "@types/classnames": "^2.2.10",
    "@types/prop-types": "^15.7.3",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.7",
    "@types/react-syntax-highlighter": "^13.5.2",
    "autoprefixer": "^9.7.6",
    "babel-plugin-module-resolver": "^4.0.0",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "closest": "^0.0.1",
    "concurrently": "^5.3.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "jest": "^24.7.1",
    "jest-axe": "^3.4.0",
    "jsdom": "^16.2.2",
    "jsdom-global": "^3.0.2",
    "nyc": "^15.0.1",
    "postcss-cli": "^7.1.1",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "prettier": "^2.0.5",
    "proxyquire": "^2.1.3",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-element-to-jsx-string": "^14.3.1",
    "react-helmet": "^6.0.0",
    "react-router-dom": "^5.1.2",
    "rollup": "^2.23.0",
    "sinon": "^10.0.0",
    "ts-node": "^8.9.1",
    "typescript": "^3.9.7"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dequelabs/cauldron-react.git"
  },
  "peerDependencies": {
    "react": "^16.6.0",
    "react-dom": "^16.6.0"
  },
  "nyc": {
    "checkCoverage": true,
    "reporter": [
      "text-summary",
      "html"
    ],
    "statements": 85,
    "branches": 78,
    "functions": 85,
    "lines": 85,
    "exclude": [
      "dist",
      "coverage",
      "test/**/*.js"
    ]
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>__tests__/setupTests.js"
    ],
    "testMatch": [
      "**/__tests__/src/**/*.js",
      "**/__tests__/demo/**/*.js"
    ],
    "collectCoverageFrom": [
      "**/src/**/*.tsx"
    ],
    "moduleNameMapper": {
      "\\.(css|less)$": "<rootDir>/__tests__/styleMock.js",
      "react-syntax-highlighter/dist/esm/light": "<rootDir>/__tests__/reactSyntaxHighlighterMock.js",
      "react-syntax-highlighter/dist/esm/languages/hljs/(.*)": "<rootDir>/__tests__/hljsMock.js",
      "\\.svg$": "<rootDir>/__tests__/svgMock.js"
    }
  }
}
